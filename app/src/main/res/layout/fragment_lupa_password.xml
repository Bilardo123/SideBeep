<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor2"
    android:gravity="center">

    <EditText
        android:id="@+id/edittxtEmailLupaPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukkan Alamat Email Anda"
        android:textSize="@dimen/font_normal"
        android:textColor="@color/edittextColor"
        android:background="@drawable/edittext_rounded"
        android:gravity="center"
        android:padding="15dip"
        android:layout_marginLeft="@dimen/spacing_large"
        android:layout_marginRight="@dimen/spacing_large"
        android:layout_marginTop="@dimen/spacing_huge"/>

    <Button
        android:id="@+id/btnResetPassword"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height_normallarge"
        android:text="Reset Kata Sandi"
        android:background="@drawable/button_rounded"
        android:textSize="@dimen/font_normal"
        android:layout_marginLeft="@dimen/spacing_large"
        android:layout_marginRight="@dimen/spacing_large"
        android:layout_marginTop="@dimen/spacing_large"
        android:textColor="@color/textColor"
        android:textAllCaps="false"
        android:drawableRight="@drawable/icon_button_white"/>

</LinearLayout>